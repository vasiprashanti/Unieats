{
  "builds": [
    {
      "src": "apps/user-web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "apps/admin-web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "apps/vendor-web/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "apps/user-web/dist/index.html" },

    { "src": "^/admin$", "dest": "apps/admin-web/dist/index.html" },
    { "src": "^/admin/(.*)$", "dest": "apps/admin-web/dist/index.html" },

    { "src": "^/vendor$", "dest": "apps/vendor-web/dist/index.html" },
    { "src": "^/vendor/(.*)$", "dest": "apps/vendor-web/dist/index.html" }
  ]
}
